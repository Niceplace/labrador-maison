# Firefly III Configuration
# Generate a random 32-character string for APP_KEY
APP_KEY=CHANGE_THIS_TO_A_RANDOM_32_CHARACTER_STRING
APP_ENV=production
APP_DEBUG=false
SITE_OWNER=mailto:your-email@example.com
DEFAULT_LANGUAGE=en_US

# Database configuration (must match db service above)
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=firefly
DB_USERNAME=firefly
DB_PASSWORD=firefly_password

# Other settings
TZ=America/Toronto
TRUSTED_PROXIES=*
DISABLE_HTTP_HEADER=false
AUDIT_PIPE=false

